<%- include('../partials/header') %>

   
    

  

<div class="container mt-3">
    <header class="jumbotron"> 
        <div class="container">
            <h1>Welcome to campground</h1>
            <p>View our hand-picked capmgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>



    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-sm-6 mb-2">

                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                      <p class="card-text"></p>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Go somewhere</a>
                    </div>
                  </div>


                <!-- <div class="thumbnail">
                    <img class="img-fluid" src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                     <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>   
                    </p>
                </div> -->
                
                
            </div>
        <% }); %>
    </div>
</div>
<%- include('../partials/footer') %>
